@require './prepend'

:root
	font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

html
	font-size 62.5%
	height 100%

body
	height 100%
	margin 0
	position relative
	max-width 100vw
	overflow hidden
	font-size 1.6rem

*
	box-sizing border-box

/* ===== Scrollbar CSS ===== */
/* Firefox */
*
	scrollbar-width auto
	scrollbar-color rgba(grey, 0.6)

/* Chrome, Edge, and Safari */
*::-webkit-scrollbar
	width 1rem

*::-webkit-scrollbar-track
	background none

*::-webkit-scrollbar-thumb
	background-color rgba(grey, 0.6)
	border-radius 1rem

button
	cursor pointer

#svelte
	height 100%

